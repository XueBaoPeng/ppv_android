<?xml version="1.0" encoding="utf-8"?>
<com.star.mobile.video.view.MaskGuideView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@id/frame_above"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/all_cover_bg" />

    <ImageView
        android:id="@id/frame_center"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_below="@id/frame_above"
        android:background="@drawable/frame_cover" />

    <View
        android:id="@+id/frame_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/frame_center"
        android:background="@drawable/all_cover_bg" />

    <ImageView
        android:id="@+id/iv_circle_focus"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_below="@id/frame_above"
        android:layout_centerHorizontal="true"
        android:src="@drawable/point_circle_rechage" />

    <ImageView
        android:id="@+id/iv_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_circle_focus"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="-38dp"
        android:layout_toRightOf="@id/iv_circle_focus"
        android:background="@drawable/finger_use_coupon" />

    <TextView
        android:id="@+id/tv_settingFrame_dimiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_msg"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ok_button_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/dismiss"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_finger"
        android:layout_centerHorizontal="true"
        android:text="@string/frame_text_tellfrind"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"/>

</com.star.mobile.video.view.MaskGuideView>