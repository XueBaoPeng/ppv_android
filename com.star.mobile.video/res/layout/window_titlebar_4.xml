<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/bg_home_channel_56dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ll_right"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@id/iv_actionbar_back"
            style="@style/action_bar_btn_style"
            android:src="@drawable/actionbar_back" />

        <ImageView
            android:id="@+id/iv_actionbar_onlineIcon"
            style="@style/action_bar_icon_style"
            android:layout_marginLeft="10dp"
            android:src="@drawable/people_icon_actionbar_grey"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_actionbar_onlineCount"
            style="@style/title_bar_text_style"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:visibility="gone" />

        <TextView
            android:id="@id/tv_actionbar_title"
            style="@style/title_bar_text_style"
            android:layout_marginLeft="10dp"
             />

        <ProgressBar
            android:id="@id/pb_title_loading"
            style="@style/loadingProgressBar_title"
            android:layout_width="@dimen/menu_btn_width"
            android:layout_height="16dp"
            android:layout_marginLeft="25dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_actionbar_more"
            style="@style/action_bar_btn_style"
            android:src="@drawable/more_icon_actionbar_white" />
    </LinearLayout>

</RelativeLayout>