<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_account_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/channel_group_bg"
        android:padding="0dp" >

        <TextView
            android:id="@+id/btn_recharge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:textSize="16sp"
            android:text="@string/recharge_smartcard"/>
    </RelativeLayout>

    <ImageView 
        android:id="@+id/iv_add_card_btn"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/add_smartcard"
        />
</merge>