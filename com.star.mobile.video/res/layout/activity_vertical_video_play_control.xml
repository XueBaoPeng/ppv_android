        <RelativeLayout
            android:id="@+id/vertical_video_bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true" >

            <RelativeLayout
                android:id="@+id/vertical_video_bottom_control"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_button_gray_press" >

                <ImageView
                    android:id="@+id/vertical_video_pause_play_button"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:scaleType="center"
                    android:background="@drawable/vp_pause" />

                <ImageView
                    android:id="@+id/sdl_iv_buttom_line_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/vertical_video_pause_play_button"
                    android:background="@drawable/actionbar_line" />

                <ImageView
                    android:id="@+id/vertical_video_full_screen_button"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/fs_shadow" />

                <ImageView
                    android:id="@+id/sdl_iv_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@id/vertical_video_full_screen_button"
                    android:background="@drawable/actionbar_line" />
            </RelativeLayout>

            <com.star.mobile.video.view.VideoSeekBar
                android:id="@+id/vertical_video_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:progressDrawable="@drawable/seeckbar_play_video"
                android:thumb="@drawable/seeckbar_video_select" />

            <TextView
                android:id="@+id/vertical_video_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="00:00"
                android:textColor="#D9D9D9"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/vertical_video_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:text="00:00"
                android:textColor="#D9D9D9"
                android:textSize="20sp" />
        </RelativeLayout>
    

</LinearLayout>