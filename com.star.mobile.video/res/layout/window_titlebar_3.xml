<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/actionbar_bg" >

    <ImageView
        android:id="@id/iv_actionbar_back"
        style="@style/action_bar_btn_style"
        android:src="@drawable/actionbar_back" />

    <!-- <ImageView
        android:id="@id/iv_actionbar_line"
        style="@style/action_bar_icon_style"
        android:layout_toRightOf="@id/iv_actionbar_back"
        android:src="@drawable/actionbar_line" /> -->

    <TextView
        android:id="@id/tv_actionbar_title"
        style="@style/title_bar_text_style"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/iv_actionbar_back" />
 
    <TextView
        android:id="@+id/tv_bouquet_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/action_bar_margin_6"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/action_bar_margin_8"
        android:paddingTop="@dimen/action_bar_margin_6"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Bouquet"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/action_bar_text_size_small" />
    
</RelativeLayout>