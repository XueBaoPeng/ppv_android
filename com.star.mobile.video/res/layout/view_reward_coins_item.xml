<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >
    <FrameLayout 
    android:layout_width="match_parent"
    android:id="@+id/rl_coins_reward"
	android:layout_margin="4dp"
    android:background="@drawable/coin_coupon_bg"
    android:layout_height="166dp" >
    <TextView 
       android:id="@+id/tv_reward_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="24dp"
       android:layout_marginLeft="24dp"
       android:textColor="@color/white"
       android:textSize="32sp"
       />
    <LinearLayout 
        android:id="@+id/ll_object"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
	   <com.star.ui.ImageView
	      android:id="@+id/iv_reward_item_icon"
	      android:layout_width="0dp"
	      android:layout_height="match_parent"
	      android:layout_margin="5dp"
	      android:layout_weight="1"
	      />    
	   <TextView
	      android:id="@+id/tv_reward_object_name"
	      android:layout_marginTop="16dp"
	      android:layout_marginRight="16dp"
	      android:layout_width="0dp"
	      android:textColor="@color/black"
	      android:textSize="16sp"
	      android:maxLines="2"
	      android:ellipsize="end" 
	      android:layout_height="match_parent"
	      android:layout_weight="1"/>
    </LinearLayout>
    
    <RelativeLayout android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom"
       android:layout_marginBottom="10dp" 
        >
	    <TextView 
	       android:id="@+id/tv_hint"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:textColor="@color/translucent_black"
	       android:layout_marginLeft="16dp"
	       android:layout_centerVertical="true"
	       android:textSize="12sp"
	       android:text="@string/coins_coupon"
	       />
	    <TextView android:id="@+id/center"
	        android:layout_width="0dp"
	        android:layout_centerHorizontal="true"
	        android:layout_height="wrap_content"
	        />
	    <LinearLayout android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="vertical"
       		android:layout_toRightOf="@+id/center"
       		>
		    <TextView 
		        android:id="@+id/tv_reward_price"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ff5c05"
		        android:textSize="24sp"
		        />
		    <TextView 
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:textColor="#ff5c05"
		       android:textSize="16sp"
		       android:text="@string/coins"
		       />    
	    </LinearLayout>    
        <ImageView android:id="@+id/iv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_shopping_cart_grey_24dp"
            />
    </RelativeLayout>
	</FrameLayout>
	<ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/line_bg" />
</LinearLayout>
