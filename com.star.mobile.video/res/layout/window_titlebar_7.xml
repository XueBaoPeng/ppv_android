        <ImageView
             android:id="@+id/iv_setting_icon"
             style="@style/action_bar_icon_style"
             android:layout_marginLeft="15dp"
             android:layout_toRightOf="@id/iv_actionbar_back"
             android:src="@drawable/actionbar_icon_setting"
            />
        <TextView
            android:id="@id/tv_actionbar_title"
            style="@style/title_bar_text_style"
