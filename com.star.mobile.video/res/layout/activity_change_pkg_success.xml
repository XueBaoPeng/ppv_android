<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <include layout="@layout/window_titlebar_4"/>
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="22dp"
        >
       <LinearLayout
       android:id="@+id/ll_no_phone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="22dp"
       >
       <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/iv_change_success"
	            android:layout_marginBottom="16dp"
	            />
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="16dp"
	            android:layout_marginRight="16dp"
	            android:gravity="center"
	            android:text="@string/change_pkg_success_message"
	            android:textColor="@color/gray_bg"
	            android:textSize="16sp"
	            />    
  		 </LinearLayout>
        
        <Button
         android:id="@+id/btn_change_check"
         android:layout_width="fill_parent"
         android:layout_height="@dimen/dp_50"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:layout_above="@+id/btn_change_ok"
         android:layout_marginBottom="16dp"
         android:background="@drawable/orange_button_bg"
         android:padding="0dp"
         android:text="@string/check"
         android:textColor="@color/white"
         android:textSize="20sp" />
		<Button
	         android:id="@+id/btn_change_ok"
	         android:layout_width="fill_parent"
	         android:layout_height="@dimen/dp_50"
	         android:layout_marginLeft="16dp"
	         android:layout_marginRight="16dp"
	         android:layout_alignParentBottom="true"
	         android:background="@drawable/orange_button_bg"
	         android:padding="0dp"
	         android:text="@string/ok"
	         android:textColor="@color/white"
	         android:textSize="20sp" />
	</RelativeLayout>
</LinearLayout>