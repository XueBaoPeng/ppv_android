<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="5dp"
	    >
	    <TextView 
	        android:id="@+id/tv_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/choose_text"
	        android:textStyle="bold"
	        android:textSize="20sp"
	        />
	    <TextView 
	        android:id="@+id/tv_money"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/orange"
	        android:textStyle="bold"
	        android:textSize="20sp"
	        />
	</RelativeLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    >
	    <TextView 
	        android:id="@+id/tv_card_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/choose_text"
	        android:textSize="18sp"
			android:text="@string/smart_card_no"
			android:textStyle="bold"        
	        />
	    <TextView 
	        android:id="@+id/tv_smart_card_no"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@id/tv_card_txt"
	        android:textColor="@color/choose_text"
	        android:textSize="18sp"
	        />
	</RelativeLayout> 
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    >
	    <TextView 
	        android:id="@+id/tv_recharge_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/choose_text"
			android:text="@string/details"
			android:textStyle="bold"       
	        android:textSize="18sp"
	        />
	    <TextView 
	        android:id="@+id/tv_recharge_no"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/tv_recharge_txt"
	        android:textColor="@color/choose_text"
	        android:layout_marginRight="20dp"
	        android:layout_marginLeft="5dp"
	        android:singleLine="true"
	        android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
	        android:textSize="18sp"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    >
	    <TextView 
	        android:id="@+id/tv_time_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/choose_text"
	        android:textStyle="bold"
	        android:textSize="18sp"
			android:text="@string/time"	        
	        />
	    <TextView 
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@id/tv_time_txt"
	        android:textColor="@color/choose_text"
	        android:textSize="18sp"
	        />
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/right_icon_register_green"
	        />
	</RelativeLayout> 
	<View 
	    android:id="@+id/v_line"
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:layout_marginTop="7dp"
	    android:background="@drawable/bgline"
	    />
</LinearLayout>
