<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/list_bg_selector" >

        <com.star.ui.ImageView
            android:id="@+id/iv_video_icon"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/channelguide_video_moren" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="center"
            android:src="@drawable/list_icon_play_touming" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/iv_video_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/list_text_color"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/cathy_watch_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/icon_broadcast_video_list" />

                <TextView
                    android:id="@+id/cathy_watch_count"
                    style="@style/video_more_text"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/cathy_watch_imageview"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cathy_duration"
                    style="@style/video_more_text"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:layout_marginRight="@dimen/action_bar_margin_15"/>

                <!--
                <TextView
                    android:id="@+id/tv_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/complete_task_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_video_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/complete_task_text"
                    android:textSize="18sp" />
                -->
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>