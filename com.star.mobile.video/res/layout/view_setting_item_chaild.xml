<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        >
        <TextView 
            android:id="@+id/tv_setting_child_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:textColor="@color/alert_setting_text"
            />
        <ImageView
            android:id="@+id/iv_arrow_right" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/list_arrow_right"
            />
        <ImageView 
	        android:id="@+id/iv_setting_reminder"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:layout_centerVertical="true"
        	android:layout_toLeftOf="@id/iv_arrow_right"
        	android:layout_marginRight="20dp"
        	android:visibility="gone"
        	android:src="@drawable/reminder_dot"
        />
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/iv_setting_child_segmentation_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bgline_long"
        />
</LinearLayout>
