<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minWidth="240dp"
    android:orientation="vertical"
    android:padding="0dp" >

    <TextView
        android:id="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#EC761A"
        android:textSize="20sp" />

    <ImageView
        android:id="@id/iv_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bgline" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10" >

        <com.star.ui.ImageView
            android:id="@+id/iv_link_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/link_picture_chat_grey" />

        <TextView
            android:id="@id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_link_icon"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#747474"
            android:textSize="18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_leave_msg"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/info_frame"
        android:hint="@string/leave_msg"
        android:paddingLeft="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="#545454"
        android:textColorHint="#B0B0B0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/prompt_dialog_btn_bg"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:paddingLeft="32dp"
            android:layout_alignParentRight="true"
            android:text="@string/send_btn"
            android:layout_marginRight="16dp"
            android:textColor="@color/orange_red"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="100dp"
            android:layout_toLeftOf="@id/ok_btn"
            android:layout_height="wrap_content"
            android:background="@drawable/prompt_dialog_btn_bg"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:text="@string/cancel"
           android:textColor="@color/dark_gray"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>