<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_pkg_select"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:scaleType="center"
        android:src="@drawable/no_sel" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_pkg_select" >

        <LinearLayout
            android:id="@+id/pkg_name_imageview_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pkg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/taks_blue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/choose_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/tv_pkg_name"
                android:src="@drawable/ic_thumb_up_blue_12dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/question_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_question_orange"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tv_pkg_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pkg_name_imageview_ll"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_default"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/pkg_split_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_pkg_price"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey" />
    </RelativeLayout>

</RelativeLayout>