<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
		   <LinearLayout 
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal"
		       android:layout_marginLeft="10dp"
		       >
		       <ImageView 
		           android:id="@+id/iv_we_task_icon"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginTop="5dp"
		           android:layout_marginBottom="5dp"
		           android:background="@drawable/icon_recharge_smartcard"
		           />
		       <TextView  
		           android:id="@+id/tv_we_name"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="5dp"
		           android:textColor="#6F7073"
		           android:textStyle="bold"
		           android:layout_gravity="center_vertical"
		           android:text="hehhehhhe"
		           />
		   </LinearLayout>
		   <LinearLayout 
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal"
		       android:layout_marginLeft="10dp"
		       >
		       <TextView  
		           android:id="@+id/tv_two_line_name"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="5dp"
		           android:textColor="#6F7073"
		           android:layout_gravity="center_vertical"
		           android:text="hehhehhhe"
		           />
		       <TextView  
		           android:id="@+id/tv_two_line_value"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="5dp"
		           android:textColor="#6F7073"
		           android:layout_gravity="center_vertical"
		           android:text="hehhehhhe"
		           />
		   </LinearLayout>
		   <LinearLayout 
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal"
		       android:layout_marginLeft="10dp"
		       >
		       <TextView  
		           android:id="@+id/tv_three_line_name"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="5dp"
		           android:textColor="#6F7073"
		           android:layout_gravity="center_vertical"
		           android:text="hehhehhhe"
		           />
		       <TextView  
		           android:id="@+id/tv_three_line_value"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="5dp"
		           android:textColor="#6F7073"
		           android:layout_gravity="center_vertical"
		           android:text="hehhehhhe"
		           />
		   </LinearLayout>
		   <LinearLayout 
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal"
		       android:layout_marginLeft="10dp"
		       >
		       <TextView  
		           android:id="@+id/tv_four_line_name"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="5dp"
		           android:textColor="#6F7073"
		           android:layout_gravity="center_vertical"
		           android:text="hehhehhhe"
		           />
		       <TextView  
		           android:id="@+id/tv_four_line_value"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="5dp"
		           android:textColor="#6F7073"
		           android:layout_gravity="center_vertical"
		           android:text="hehhehhhe"
		           />
		   </LinearLayout>
		   <View 
		       	android:id="@+id/v_line"
		        android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:background="@drawable/bgline_long"
       		 />
    </LinearLayout>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_choose_picture"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
