<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	    <RelativeLayout 
	        android:layout_toLeftOf="@+id/praise"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	    <com.star.ui.ImageView
	        android:id="@+id/user_logo"
	        android:layout_width="@dimen/dp_70"
	        android:layout_height="@dimen/dp_70"
	        android:layout_marginLeft="@dimen/dp_10"
	        android:layout_marginTop="@dimen/dp_10"
	        />
	    <TextView 
	        android:id="@+id/tv_comment_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/user_logo"
	        android:layout_marginTop="@dimen/dp_8"
	        android:textColor="#6F7073"
	        android:textSize="15sp"
	        android:layout_marginLeft="@dimen/dp_15"
	        />
	      <TextView 
	        android:id="@+id/tv_comment_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/user_logo"
	        android:layout_marginTop="@dimen/dp_5"
	        android:layout_below="@id/tv_comment_username"
	        android:textColor="#747474"
	        android:textSize="15sp"
	        android:layout_marginLeft="@dimen/dp_15"/>
	      
	       <TextView 
	        android:id="@+id/tv_data_time"
	        android:layout_width="@dimen/dp_165"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/user_logo"
	        android:textColor="#CCCCCC"
	        android:layout_below="@id/tv_comment_content"
	        android:layout_marginTop="@dimen/dp_5"
	        android:textSize="15sp"
	        android:layout_marginLeft="@dimen/dp_15"/>
	       </RelativeLayout>
	    	
		   <com.star.mobile.video.view.PraiseView
	           android:id="@+id/praise"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentRight="true"
	    	   android:layout_marginRight="@dimen/dp_10"
	    	   android:gravity="center_vertical"/>
	      
    </RelativeLayout>
    
	<View 
	    android:layout_width="wrap_content"
	    android:layout_height="1dp"
	    android:layout_marginTop="@dimen/dp_5"
	    android:layout_marginLeft="@dimen/dp_10"
	    android:layout_marginRight="@dimen/dp_10"
	    android:background="@drawable/bgline_long"
	    />
</LinearLayout>
