<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/btn_recharge_coupon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/list_bg_selector"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/iv_icon_co"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:scaleType="center"
            android:src="@drawable/icon_profile_coupon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_arrow_co"
            android:layout_toRightOf="@id/iv_icon_co"
            android:gravity="center_vertical"
            android:text="@string/use_coupon"
            android:textColor="#545454"
            android:textSize="18sp" />

        <ImageView
            android:id="@id/iv_arrow_co"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_smartcard" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_recharge_smartcard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/list_bg_selector"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/iv_icon_sc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:scaleType="center"
            android:src="@drawable/icon_recharge_card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_arrow_sc"
            android:layout_toRightOf="@id/iv_icon_sc"
            android:gravity="center_vertical"
            android:text="@string/recharge_card"
            android:textColor="#545454"
            android:textSize="18sp" />

        <ImageView
            android:id="@id/iv_arrow_sc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_smartcard" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_recharge_payment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/list_bg_selector"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/iv_icon_py"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:scaleType="center"
            android:src="@drawable/icon_online_payment_recharge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_arrow_py"
            android:layout_toRightOf="@id/iv_icon_py"
            android:gravity="center_vertical"
            android:text="@string/online_payment"
            android:textColor="#545454"
            android:textSize="18sp" />

        <ImageView
            android:id="@id/iv_arrow_py"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_smartcard" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_recharge_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/recharge_limit"
        android:textColor="#D0021B"
        android:visibility="gone"
        android:textSize="14sp" />

</LinearLayout>