<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/actionbar_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_actionbar_back"
        style="@style/action_bar_btn_style"
        android:src="@drawable/actionbar_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_search_actionbar"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/iv_search_btn"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_search_white_t_24dp" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_search_clear"
            android:layout_toRightOf="@id/iv_search_btn"
            android:background="@null"
            android:hint="@string/search_edit"
            android:imeOptions="actionSearch"
            android:cursorVisible="false"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#7FFFFFFF" />

        <ImageView
            android:id="@id/iv_search_clear"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/ic_delete_white_t_24dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>