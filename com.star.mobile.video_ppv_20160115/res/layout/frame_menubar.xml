<?xml version="1.0" encoding="utf-8"?>
<com.star.mobile.video.view.MaskGuideView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_bg"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/iv_menu_guide"
        style="@style/action_bar_btn_style"
        android:layout_height="@dimen/action_bar_height"
        android:src="@drawable/sidebar_bg" />

    <ImageView
        android:id="@+id/iv_menu_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:src="@drawable/sidebar_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_menu_finger"
        android:layout_marginTop="-50dp"
        android:layout_toRightOf="@id/iv_menu_finger"
        android:background="@drawable/guide_bg"
        android:padding="10dp"
        android:text="@string/click_sidebar"
        android:textColor="@color/white"
        android:textSize="14sp" />

</com.star.mobile.video.view.MaskGuideView>