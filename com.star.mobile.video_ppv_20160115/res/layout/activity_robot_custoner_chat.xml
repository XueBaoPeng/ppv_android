<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg" >

    <include
        android:id="@+id/my_order_title"
        layout="@layout/window_titlebar_4" />

    <com.star.mobile.video.view.ListView
        android:id="@+id/robot_customer_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_order_title"
        android:layout_marginBottom="54dp"
        android:layout_marginTop="4dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="#00000000"
        android:scrollbars="none" >
    </com.star.mobile.video.view.ListView>

    <include
        android:id="@+id/robot_customer_loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_order_title"
        layout="@layout/loading_progress_large" />

    <com.star.mobile.video.channel.ChatBottomInputView
        android:id="@+id/chatInputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>