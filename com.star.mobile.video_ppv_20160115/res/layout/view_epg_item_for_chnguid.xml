<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/about_list_sel_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_margin_35"
        android:layout_marginTop="@dimen/action_bar_margin_7"
        android:background="@color/onair_btn_unfocus"
        android:padding="0dp" >

        <TextView
            android:id="@id/tv_data_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/action_bar_margin_15"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/channle_group_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_data_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/action_bar_margin_20"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/channle_group_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.star.mobile.video.view.EpgChnGuideItemView
        android:id="@+id/chnGuid_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>