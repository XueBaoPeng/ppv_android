<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/menu_item_height" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/action_bar_margin_10"
            android:src="@drawable/menu_icon_channelguide"
            android:scaleType="center" />

        <TextView
            style="@style/menu_text_focus_style"
            android:text="tenbre play V 1.2.3"
            android:layout_marginLeft="@dimen/action_bar_margin_10"
            android:layout_marginRight="@dimen/action_bar_margin_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right" >

            <ImageView
                style="@style/action_bar_icon_style"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@drawable/reminder_dot" />

            <ImageView
                style="@style/action_bar_icon_style"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/v_bottom_line"
        style="@style/divider_line_style"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/bulling_line" />

</LinearLayout>