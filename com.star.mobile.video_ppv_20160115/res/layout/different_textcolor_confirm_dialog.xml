<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_up" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bg"
        android:padding="0dp"
        android:orientation="vertical"
        >
    <TextView 
        android:id="@+id/tv_title"
        android:textColor="#EC761A"
        android:textSize="23sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        />
	<ImageView 
	    android:id="@+id/iv_line"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bgline"
	    android:layout_below="@id/tv_title"
	    android:layout_marginLeft="@dimen/dp_10"
	    android:layout_marginRight="@dimen/dp_10"
	    android:layout_marginTop="@dimen/dp_10"
	    />
		<RelativeLayout
		    android:id="@+id/rl_content" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/iv_line"
		    android:layout_marginLeft="@dimen/dp_30"
		    android:layout_marginTop="@dimen/dp_10"
		    android:layout_marginRight="@dimen/dp_30"
		    android:layout_marginBottom="@dimen/dp_15"
		    android:gravity="center"
	    	>
	    	
		    <TextView
		        android:id="@+id/tv_content_1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#747474"
		        android:visibility="gone"
		        android:textSize="20sp" />
		    <TextView
		        android:id="@+id/tv_content_2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tv_content_1"
		        android:textColor="#747474"
		        android:textSize="20sp" />

		</RelativeLayout>
		<View
		    android:layout_below="@id/rl_content" 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    />
	</RelativeLayout>
	
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/rl_up"
	    android:layout_marginTop="@dimen/dp_06"
	    android:layout_marginLeft="@dimen/dp_01"
	    android:layout_marginRight="@dimen/dp_01"
	    android:background="@drawable/popup_button_go"
        >
			<RelativeLayout 
			     android:id="@+id/rl_cancel"
			     android:layout_width="match_parent"
		   		 android:layout_height="wrap_content"
		   		 android:layout_centerVertical="true"
		   		 android:layout_centerHorizontal="true"
		   		 android:layout_toLeftOf="@+id/iv_vertical_line"
			    >
			    <TextView
				    android:id="@+id/cancel_btn"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:layout_centerVertical="true"
				    android:textColor="#545454"
				    android:textSize="20sp"
				    android:text="@string/go"
	   				 />
			</RelativeLayout>
        
        <ImageView 
            android:id="@id/iv_vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/date_line"
            />
        
        <RelativeLayout 
             android:id="@+id/rl_ok"
		     android:layout_width="match_parent"
	   		 android:layout_height="wrap_content"
	   		 android:layout_centerVertical="true"
	   		 android:layout_centerHorizontal="true"
	   		 android:layout_toRightOf="@id/iv_vertical_line"
			 >
			    <TextView
				    android:id="@+id/ok_btn"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:layout_centerVertical="true"
				    android:textColor="#545454"
				    android:textSize="20sp"
				    android:text="@string/go"
	   				 />
			</RelativeLayout>
        
    </RelativeLayout>
	
</RelativeLayout>
