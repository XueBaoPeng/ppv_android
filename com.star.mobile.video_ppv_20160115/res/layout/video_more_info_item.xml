<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/video_more_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/list_bg_selector" >

        <com.star.ui.ImageView
            android:id="@+id/video_more_imageview"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@drawable/channelguide_video_moren" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/video_more_imageview"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/video_more_info_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/list_text_color"
                android:textSize="@dimen/action_bar_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/video_more_watch_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/icon_broadcast_video_list" />

                <TextView
                    android:id="@+id/video_more_watch_count"
                    style="@style/video_more_text"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/video_more_watch_imageview"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/video_more_duration"
                    style="@style/video_more_text"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/action_bar_margin_15" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>