<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/window_titlebar_4" />

    <RelativeLayout
        android:id="@+id/rl_facebook"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:padding="0dp"
        android:visibility="gone"
        >

        <View
            android:id="@+id/v_facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/account_facebook" />

        <TextView
            style="@style/action_bar_text_shadow_style"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/v_facebook"
            android:text="Facebook"
            android:textColor="#545454"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_facebook_connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:src="@drawable/connect_off" />
    </RelativeLayout>
	<ImageView
        android:id="@+id/iv_title_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgline_long" />
    <RelativeLayout
        android:id="@+id/rl_twitter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="3dp"
        android:padding="0dp"
        android:visibility="gone"
       >

        <View
            android:id="@+id/v_twitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/account_twitter" />

        <TextView
            style="@style/action_bar_text_shadow_style"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/v_twitter"
            android:text="Twitter"
            android:textColor="#545454"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_twitter_connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:src="@drawable/connect_off" />
    </RelativeLayout>
	<ImageView
        android:id="@+id/iv_title_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgline_long" />
</LinearLayout>