<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <include layout="@layout/window_titlebar_4"/>
     <ScrollView
        android:id="@+id/phone_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="22dp"
	    android:layout_marginLeft="16sp"
	    android:layout_marginRight="16sp"
        >
   <LinearLayout
       android:id="@+id/ll_all"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
   <LinearLayout
       android:id="@+id/ll_phone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <TextView android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/change_phone_number"
           android:textColor="@color/gray_bg"
           android:layout_marginTop="16dp"
           android:textSize="16sp"
           />
       <LinearLayout
           android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="16dp"
	       android:orientation="horizontal"
           >
           <TextView android:id="@+id/tv_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/gray_bg"
               android:textSize="20sp"
               />
           <EditText
		        android:id="@+id/et_phone_num_1"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dp_50"
		        android:background="@drawable/number_input"
		        android:layout_marginLeft="4dp"
		        android:inputType="number"
		        android:cursorVisible="false"
		        android:maxLength="1"
		        android:singleLine="true"
		        android:gravity="center"
		        android:textColor="#545454"
		        android:ellipsize="end"
		        />
		   <EditText
		        android:id="@+id/et_phone_num_2"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dp_50"
		        android:background="@drawable/number_input"
		        android:inputType="number"
		        android:layout_marginLeft="8dp"
		        android:cursorVisible="false"
		        android:maxLength="1"
		        android:gravity="center"
		        android:singleLine="true"
		        android:textColor="#545454"
		        android:ellipsize="end"
		        />
		   <EditText
		        android:id="@+id/et_phone_num_3"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dp_50"
		        android:background="@drawable/number_input"
		        android:layout_marginLeft="8dp"
		        android:inputType="number"
		        android:singleLine="true"
		        android:maxLength="1"
		        android:cursorVisible="false"
		        android:gravity="center"
		        android:textColor="#545454"
		        android:ellipsize="end"
		        />
		   <EditText
		        android:id="@+id/et_phone_num_4"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dp_50"
		        android:background="@drawable/number_input"
		        android:inputType="number"
		        android:layout_marginLeft="8dp"
		        android:maxLength="1"
		        android:cursorVisible="false"
		        android:gravity="center"
		        android:singleLine="true"
		        android:textColor="#545454"
		        android:ellipsize="end"
		        />
		   <EditText
		        android:id="@+id/et_phone_num"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dp_50"
		        android:background="@drawable/number_input"
		        android:layout_marginLeft="50000dp"
		        android:inputType="number"
		        android:singleLine="true"
		        android:maxLength="4"
		        android:gravity="center"
		        android:textColor="#545454"
		        android:ellipsize="end"
		        />
			<LinearLayout  
		        android:layout_width="match_parent"  
		        android:layout_height="match_parent"  
		        android:gravity="right" >  
			   <ImageView
			       android:id="@+id/iv_verify"
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_gravity="center"
			       android:visibility="gone"
			       android:src="@drawable/ic_confirm" />
			</LinearLayout>
       </LinearLayout>
       <TextView android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/change_phone_number_hiht"
           android:layout_marginTop="16dp"
           android:layout_marginBottom="22dp"
           android:textColor="@color/text_default"
	       android:textSize="12sp"
           />
   </LinearLayout>
   <LinearLayout
       android:id="@+id/ll_no_phone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:visibility="gone"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="22dp"
       >
       <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/not_available"
	            />
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/not_change_phone_number_hiht"
	            android:textColor="@color/gray_bg"
	            android:textSize="16sp"
	            />
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/or"
	            android:layout_marginTop="12dp"
	            android:layout_marginBottom="12dp"
	            android:textColor="@color/gray_bg"
	            android:textSize="16sp"
	            />
	         <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/change_pkg_phone_not_have"
	            android:textColor="@color/gray_bg"
	            android:textSize="16sp"
	            />    
   </LinearLayout>
   </LinearLayout>
   <LinearLayout
       android:id="@+id/ll_help"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/ll_all"
	        android:orientation="vertical" >
	
	            <LinearLayout
	                android:id="@+id/other_help_ll"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="16dp"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:scaleType="center"
	                    android:src="@drawable/icon_otherhelp_blue_24dp" />
	
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center"
	                    android:layout_marginLeft="24dp"
	                    android:gravity="center"
	                    android:text="@string/other_help"
	                    android:textColor="@color/gray_bg"
	                    android:textSize="20sp" />
	            </LinearLayout>
	
	            <ImageView
	                android:id="@+id/split_line_iv"
	                android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:layout_marginTop="16dp"
	                android:background="@color/grey" />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="8dp"
	                android:text="@string/startimes_business_hall_or_call"
	                android:textColor="@color/dicobery_content_txt"
	                android:textSize="12sp" />
	
	            <com.star.mobile.video.view.NoScrollListView
	                android:id="@+id/lv_customer_phone"
	                style="@style/listview_style"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="0dp"
	                android:layout_marginRight="0dp" />
    </LinearLayout>
	
	<Button
         android:id="@+id/btn_change_phone"
         android:layout_width="fill_parent"
         android:layout_height="@dimen/dp_50"
         android:layout_alignParentBottom="true"
         android:layout_below="@+id/ll_help"
         android:layout_marginTop="50dp"
         android:layout_marginBottom="32dp"
         android:background="@drawable/need_more_coins_button"
         android:padding="0dp"
         android:text="@string/text_onair_next"
         android:textColor="@color/white"
         android:textSize="20sp" />
	</RelativeLayout>
	</ScrollView>
</LinearLayout>