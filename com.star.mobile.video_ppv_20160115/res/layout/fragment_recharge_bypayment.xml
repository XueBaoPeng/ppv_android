<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg"
    android:orientation="vertical"
    android:padding="20dp" >

    <RelativeLayout
        android:id="@+id/rl_threen_pay"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/iv_threen_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_choose_report" />

        <TextView
            android:id="@+id/tv_threen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_threen_btn"
            android:text="@string/online_payment"
            android:textColor="@color/choose_text"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_threen_pay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paga_button" />

    <LinearLayout
        android:id="@+id/ll_threen_pay_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:background="@drawable/info_frame"
        android:padding="0dp" >

        <TextView
            android:id="@+id/tv_currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#707072"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pay_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/entet_the_amount"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#545454"
            android:textColorHint="#B0B0B0"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_min_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="More than â‚¦50"
        android:textColor="#4A4A4A" />

    <TextView
        android:id="@+id/tv_recharge_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/recharge_limit"
        android:textColor="#D0021B"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_recharge_pay"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/need_more_coins_button"
        android:padding="0dp"
        android:text="@string/confirm_to_recharge"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>