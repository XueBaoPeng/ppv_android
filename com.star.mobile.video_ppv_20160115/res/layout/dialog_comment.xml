<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minWidth="240dp"
    android:orientation="vertical"
    android:padding="0dp" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    >
		<com.star.ui.ImageView
	        android:id="@+id/user_logo"
	        android:layout_width="@dimen/dp_40"
	        android:layout_height="@dimen/dp_40"
	        android:src="@drawable/no_portrait"
	        android:layout_marginLeft="@dimen/dp_10"
	        android:layout_marginTop="@dimen/dp_10"
	        />
	    <TextView 
	        android:id="@+id/tv_comment_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/user_logo"
	        android:layout_alignTop="@id/user_logo"
	        android:textColor="#333333"
	        android:textSize="16sp"
	        android:layout_marginLeft="@dimen/dp_8"
	        />
	    <RatingBar
            android:id="@+id/rt_user_score"
            style="@style/roomRatingBar_12"
            android:layout_toRightOf="@id/user_logo"
            android:layout_below="@+id/tv_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1" />
	    <RelativeLayout 
	        android:id="@+id/iv_comment_send"
	           android:layout_width="40dp"
	           android:layout_height="match_parent"
	           android:layout_alignParentRight="true"
	           android:background="@drawable/item_bg"
	        >
	       <ImageView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerInParent="true"
	           android:src="@drawable/ic_send_blue_24dp"
	           android:layout_centerVertical="true"
	           android:layout_marginRight="@dimen/dp_16"
	           />
	    </RelativeLayout>
	      

	</RelativeLayout>
    <EditText
        android:id="@+id/et_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="14dp"
        android:gravity="top"
        android:background="@null"
        android:minHeight="200dp"
        android:textColor="#333333"
	    android:textSize="16sp"
        android:hint="@string/channel_comment_hiht"
        />
</LinearLayout>