<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/window_titlebar_4"/>
    <com.star.mobile.video.view.SmartCardInfoView
        android:id="@+id/bill_smartcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.star.mobile.video.view.SmartCardInfoView>
	<ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/line_bg" />
	<com.star.mobile.video.view.ControlTabView 
		android:id="@+id/bill_controltabview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"	    
	    >
	</com.star.mobile.video.view.ControlTabView>
		<android.support.v4.view.ViewPager
	        android:id="@+id/vp_bill_content"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" 
	        >
	    </android.support.v4.view.ViewPager>
</LinearLayout>
