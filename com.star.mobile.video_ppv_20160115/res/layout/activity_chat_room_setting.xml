<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/window_titlebar_4"/>
	<LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="vertical"
      >
	   <RelativeLayout
	       android:id="@+id/rl_top_post"
	       android:layout_width="match_parent"
	       android:layout_height="60dp"
	       >
	       <ImageView
	        android:id="@+id/iv_set_icon" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ic_turned_in_blue_24dp"
	        />
	       
	    
	       <ImageView
            style="@style/action_bar_icon_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/action_bar_margin_20"
            android:src="@drawable/icon_pack_up" />

	       <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:textColor="@color/gray_bg"
	        android:text="@string/top_post"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/iv_set_icon"
	        />

	   </RelativeLayout>
	   <ImageView 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:background="@drawable/bgline_long"
       />
	    <RelativeLayout
	       android:id="@+id/rl_chat_alert"
	       android:layout_width="match_parent"
	       android:layout_height="60dp"
	       >
	      <ImageView
	        android:id="@+id/iv_notifi_icon" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ic_notifications"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:textColor="@color/gray_bg"
	        android:text="@string/mute_notification"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/iv_notifi_icon"
	        />
	    <ImageView 
	           android:id="@+id/iv_notifi_switch"
	           android:layout_width="60dp"
	           android:layout_height="50dp"
	           android:layout_marginRight="@dimen/action_bar_margin_10"
	           android:layout_alignParentRight="true"
	           android:layout_centerVertical="true"
	           android:scaleType="center"
	           android:src="@drawable/switch_off"
	           /> 
	      </RelativeLayout>
	      <ImageView 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:background="@drawable/bgline_long"
       />
  </LinearLayout>
  
</LinearLayout>
