<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="96dp" >

        <com.star.ui.ImageView
            android:id="@+id/iv_video_end_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_video_end_name"
            android:scaleType="fitXY"
            android:src="@drawable/video_bg" />

        <TextView
            android:id="@+id/tv_video_end_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:gravity="center"
            android:singleLine="true"
            android:text="3232"
            android:textColor="@color/list_text_color"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/list_icon_play_touming" />
    </RelativeLayout>

</RelativeLayout>