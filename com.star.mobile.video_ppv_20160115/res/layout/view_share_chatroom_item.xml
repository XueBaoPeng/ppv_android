<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:gravity="center_vertical"
	    >
	    <FrameLayout 
	        android:layout_width="65dp"
	        android:layout_height="65dp"
	        >
	        <com.star.ui.ImageView
	            android:id="@+id/iv_chatroom_icon"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/icon_channel_logo" />

        	<ImageView
	           android:id="@+id/iv_chatroom_icon_cover"
	           android:layout_width="match_parent"
	           android:layout_height="match_parent"
	           android:layout_margin="1dp"
	           android:background="@drawable/picture_bg_line" />
	        </FrameLayout>
	        <TextView
	            android:id="@+id/tv_chatroom_name" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:textColor="@color/choose_text"
	            android:layout_marginLeft="15dp"
	            />
	</LinearLayout>
	<View 
	    android:id="@+id/v_line"
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="@drawable/bgline"
	    />
</LinearLayout>
