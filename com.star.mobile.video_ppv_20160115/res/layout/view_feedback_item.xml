<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.star.ui.ImageView
            android:id="@+id/iv_user_heand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/example_head_portrait" />

        <RelativeLayout
            android:id="@+id/rl_name_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_user_heand" >

            <TextView
                android:id="@+id/tv_user_message_create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tv_user_message_create_date"
                android:singleLine="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/darkGray"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_name_date"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_user_heand"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_startime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp" >

        <com.star.ui.ImageView
            android:id="@+id/iv_startime_heand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/app_icon" />

        <RelativeLayout
            android:id="@+id/rl_startime_name_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_startime_heand" >

            <TextView
                android:id="@+id/tv_startime_create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_gray"
                android:text="1401222"
                android:singleLine="true"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_startime_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tenbre"
                android:textColor="@color/darkGray"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tv_startime_create_date"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_startime_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_startime_name_date"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_startime_heand"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgline_long" />

</LinearLayout>